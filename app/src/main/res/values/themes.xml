<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SmartShop" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryVariant">@color/colorAccent</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:textColor">@color/black</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="background">@color/white</item>
        <item name="tint">@color/black</item>
    </style>
    <style name="screen">
        <item name="android:background">@color/white</item>
    </style>
    <style name="screen1">
        <item name="android:background">@color/white</item>
    </style>
    <style name="screen2">
        <item name="android:background">#008DFF</item>
    </style>
    <style name="screen3">
        <item name="android:background">#646464</item>
    </style>
    <style name="circle">
        <item name="civ_circle_background_color">#fff</item>
        <item name="civ_border_color">#00E1FD</item>
    </style>
    <style name="category">
        <item name="android:background">@drawable/circle_chape</item>
    </style>
    <style name="textColor">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="tint">
        <item name="android:tint">@color/white</item>
    </style>
    <style name="cardView">
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="OutlinedBox" parent="Base.Widget.MaterialComponents.TextInputLayout">
        <item name="materialThemeOverlay">
            @style/ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox
        </item>
        <item name="boxCollapsedPaddingTop">0dp</item>
    </style>
<style name="productTextName">
    <item name="android:textStyle">bold</item>
    <item name="android:textColor">@color/black</item>
</style>
<style name="productTextBoard">
    <item name="android:textStyle">normal</item>
    <item name="android:textColor">@color/black</item>
</style>
<style name="productTextPrice">
    <item name="android:textStyle">bold</item>
    <item name="android:textColor">@color/black</item>
</style>
<style name="favorite">
    <item name="android:backgroundTint">#F8F8F8</item>
</style>
    <style name="imgP">
        <item name="tint">@color/white</item>
    </style>
</resources>